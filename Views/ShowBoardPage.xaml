<Page x:Class="WPF_TODO_Application.Views.ShowBoardPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_TODO_Application.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowBoardPage1">

    <Grid Background="White">
        <DataGrid Name="Board" 
                  ItemsSource="{Binding Board}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="TODO" 
                                    Binding="{Binding Path=Board.TODO}"/>
                <DataGridTextColumn Header="IN PROGRESS" 
                                    Binding="{Binding Path=Board.INPROGRESS}"/>
                <DataGridTextColumn Header="DONE" 
                                    Binding="{Binding Path=Board.DONE}"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Page>
